<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
	<!-- Servlets -->
	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.IndexServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MoviesHome</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.MovieHomeServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MovieList</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.MovieListServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Comment</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.CommentServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MovieDetail</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.MovieServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.LoginServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.LogoutServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Registration</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.RegistrationServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Error</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.ErrorServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserComments</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.servlet.UserCommentsServlet
		</servlet-class>
	</servlet>

	<!-- Filters -->
	<filter>
		<filter-name>FatalError</filter-name>
		<filter-class>ar.edu.itba.paw.g4.filter.FatalErrorFilter
		</filter-class>
	</filter>
	<filter>
		<filter-name>HomeFilter</filter-name>
		<filter-class>ar.edu.itba.paw.g4.filter.HomeFilter</filter-class>
	</filter>
	<filter>
		<filter-name>UserFilter</filter-name>
		<filter-class>ar.edu.itba.paw.g4.filter.UserFilter</filter-class>
	</filter>

	<!-- Mappings -->
	<filter-mapping>
		<filter-name>FatalError</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>HomeFilter</filter-name>
		<url-pattern>/</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MoviesHome</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>Comment</servlet-name>
		<url-pattern>/comment</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MovieList</servlet-name>
		<url-pattern>/movies/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MovieDetail</servlet-name>
		<url-pattern>/movies/detail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Error</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserComments</servlet-name>
		<url-pattern>/me/comments/all</url-pattern>
	</servlet-mapping>
</web-app>