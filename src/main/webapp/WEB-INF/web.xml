<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.controller.IndexController
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MovieList</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.controller.MovieListController
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MovieDetail</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.controller.MovieDetailController
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.controller.LoginController
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Registration</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.controller.RegistrationController
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Error</servlet-name>
		<servlet-class>ar.edu.itba.paw.g4.controller.ErrorController
		</servlet-class>
	</servlet>
	<filter>
		<filter-name>UserFilter</filter-name>
		<filter-class>ar.edu.itba.paw.g4.filter.UserFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MovieList</servlet-name>
		<url-pattern>/movies/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MovieDetail</servlet-name>
		<url-pattern>/movies/detail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Error</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>
</web-app>